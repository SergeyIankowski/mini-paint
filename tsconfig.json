{
  "include": ["src/**/*", "module.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "files": ["src/index.tsx"]
}
